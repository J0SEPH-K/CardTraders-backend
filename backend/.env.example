APP_ENV=dev

# --- Postgres (optional) ---
# Example: postgresql+psycopg://USER:PASS@HOST:5432/DBNAME?sslmode=require
DATABASE_URL=postgresql+psycopg://user:pass@localhost:5432/cardtraders

# --- MongoDB (preferred for deployment) ---
# Example (Atlas SRV): mongodb+srv://USER:PASS@CLUSTER.mongodb.net/?retryWrites=true&w=majority
MONGODB_URI=
MONGODB_DB_NAME=cardtraders
MONGODB_COLLECTION=listings

# --- SMS/Email Providers ---
# Set to false in prod to avoid returning dev codes in API responses
DEV_MODE=true

# Solapi (CoolSMS)
# Register sender numbers in Solapi console; numbers must be digits only (e.g., 01012345678)
SOLAPI_API_KEY=
SOLAPI_API_SECRET=
SOLAPI_FROM=

# Twilio (optional)
# TWILIO_ACCOUNT_SID=
# TWILIO_AUTH_TOKEN=
# TWILIO_FROM=

# SendGrid (optional for email verification)
# SENDGRID_API_KEY=
# SENDGRID_FROM=
